<section id="sec-destinos" class="viajes mb-5">
    <div class="container">
        <div class="row ">
            <!-- SECCION DE VIAJES PARA DESKTOP -->
            <div class="col-md-12 d-none d-sm-block">
                <div class="row">
                    <!-- En esta seccion se autogeneran los distintos viajes
    cada columna correspondera a un viaje distinto, este por dentro contendra un div,
    que estara centrado tanto horizontal como verticalmente. -->
                    {{#if username}}
                        {{#if viajes.length}}
                            {{#each viajes}}
                                <div class="col-md-4 mt-5 mb-5 contenedor-viaje d-flex justify-content-center">
                                    <div class="item-viaje">
                                        <div class="row correccion">
                                            <div class="col-12 bg-blue"><h5
                                                    class="text-center f-blanco font-title">{{viaje}}</h5></div>
                                        </div>
                                        <!--Seccion destinada a a�adir al carrito de compra-->

                                        <div class="row addViaje" style="position:absolute;width:30%">
                                            <div id="{{id}}" class="col-12 d-flex justify-content-center">
                                                <a href="/addcart/{{id}}"> <img src="img/carrito.png"
                                                                                alt="Alternate Text"/> </a>
                                            </div>
                                        </div>


                                        <img src="img/{{ruta}}" class="img-responsive" alt="">
                                        <div class="row viaje-descripcion">
                                            <div class="col-md-8 my-auto vd">
                                                <h6 class="f-blanco">{{descripcion}}</h6>
                                            </div>
                                            <div class="col-md-4 bg-yellow">
                                                <div class="vp my-auto">
                                                    <p class="f-blanco text-center">{{precio}}$</p>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            {{/each}}
                        {{else}}
                            <p>No existen viajes</p>
                        {{/if}}
                    {{/if}}

                    {{#unless username}}
                        {{#if viajes.length}}
                            {{#each viajes}}

                                <div class="col-md-4 mt-5 mb-5 contenedor-viaje d-flex justify-content-center">
                                    <div class="item-viaje">
                                        <div class="row correccion">
                                            <div class="col-12 bg-blue"><h5
                                                    class="text-center f-blanco font-title">{{viaje}}</h5></div>
                                        </div>
                                        <!--Seccion destinada a a�adir al carrito de compra-->

                                        <img src="img/{{ruta}}" class="img-responsive" alt="">
                                        <div class="row viaje-descripcion">
                                            <div class="col-md-8 my-auto vd">
                                                <h6 class="f-blanco">{{descripcion}}</h6>
                                            </div>
                                            <div class="col-md-4 bg-yellow">
                                                <div class="vp my-auto">
                                                    <p class="f-blanco text-center">{{precio}}$</p>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            {{/each}}
                        {{else}}
                            <p>No existen viajes</p>
                        {{/if}}
                    {{/unless}}

                    <!--*****************GENERACION DE VIAJES************************-->

                </div>
            </div>
            <!--SECCION DE VIAJES PARA MOVIL-->
            <div class="col-12 d-block d-sm-none m-carousel">
                <!-- Carousel -->
                <div id="carouselExampleControls" class="carousel slide d-block d-md-none p-4" data-ride="carousel">
                    <div class="carousel-inner p-4">
                        <div class="carousel-inner">
                            {{#if viajes.length}}
                                {{#each viajes}}
                                    <!-- Al primer objeto de los viajes le pasamos un parametro especifico-->
                                    {{#if @first}}

                                        <div class="carousel-item active">
                                            <!--  Box correspondiente a cada destino -->
                                            <div class="row">
                                                <div class="col-12 bg-blue mv-title"><h3
                                                        class="text-center f-blanco">{{viaje}}</h3></div>
                                                <!--Titulo destino-->
                                                <div class="col-12 pad0"><img src="img/{{ruta}}" class="w-100 h-100"
                                                                              alt="Alternate Text"/></div>
                                                <!--Imagen del destino-->
                                                <!-- Descripcion y precio del destino-->
                                                <div class="col-12 mv-txt pad0">
                                                    <div class="row">
                                                        <div class="col-8 mv-des"><h5
                                                                class="f-blanco">{{descripcion}}</h5>
                                                        </div>
                                                        <div class="col-4 mv-price"><h4
                                                                class="f-blanco text-center">{{precio}}$</h4></div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    {{/if}}
                                    <div class="carousel-item ">
                                        <!--  Box correspondiente a cada destino -->
                                        <div class="row">
                                            <div class="col-12 bg-blue mv-title"><h3
                                                    class="text-center f-blanco">{{viaje}}</h3></div>
                                            <!--Titulo destino-->
                                            <div class="col-12 pad0"><img src="img/{{ruta}}" class="w-100 h-100"
                                                                          alt="Alternate Text"/></div>
                                            <!--Imagen del destino-->
                                            <!-- Descripcion y precio del destino-->
                                            <div class="col-12 mv-txt pad0">
                                                <div class="row">
                                                    <div class="col-8 mv-des"><h5 class="f-blanco">{{descripcion}}</h5>
                                                    </div>
                                                    <div class="col-4 mv-price"><h4
                                                            class="f-blanco text-center">{{precio}}
                                                        $</h4></div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                {{/each}}
                            {{/if}}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>

        </div>


    </div>
</section>


