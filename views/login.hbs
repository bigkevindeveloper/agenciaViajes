<div class="log full-page">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-10 col-md-5 log-content">
                <div class="col-12 register ">
                    <!-- BOX CON EL CONTENIDO DEL LOGIN -->
                    <div class="row">
                        <div class="col-12">
                            <h2 class="text-center">INICIAR SESION</h2>
                        </div>
                    </div>

                    <div class="row">

                        <form class="col-12" action="/iniciosesion" method="post">
                            <div class="row">
                                <div class="col-12 d-flex justify-content-center">
                                    <!-- Email de usuario -->
                                    <input id="emaillogin" class="input-size" name="emaillogin" type="text" required autocomplete="on" placeholder="* Email" />
                                </div>
                                <div class="col-12 d-flex justify-content-center">
                                    <!--Contraseï¿½a-->
                                    <input class="input-size" name="passwordlogin" type="password" required autocomplete="on" placeholder="* Clave" />
                                </div>
                               
                                <br />


                                {{#if error}}
                                <div class="col-12">
                                    <p class="mensajeError text-center">Contrasena incorrecta</p>
                                </div>
                                {{/if}}
                                {{#if noactivo}}
                                <div class="col-12">
                                    <p class="mensajeError text-center">El usuario no esta activado</p>
                                </div>
                                {{/if}}
                                <div style="margin-top:1vh" class="col-12 d-flex justify-content-center">
                                    <button id="logueo" type="submit" class="btn btn-outline-secondary" style="color:black">Iniciar sesion</button>
                                </div>
                                <div class="col-12 d-flex justify-content-center">
                                    <a href="#" style="text-decoration:none;color:black" class="text-center">No recuerda su contrasena?</a>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
